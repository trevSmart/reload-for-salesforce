{
  "name": "salesforce-app",
  "private": true,
  "version": "1.0.0",
  "description": "Salesforce App",
  "scripts": {
    "lint": "eslint force-app/**/*.js --fix",
    "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "precommit": "npm run prettier:verify && npm run lint",
    "test": "npm run precommit && npm run deploy:validate",
    "deploy:validate": "sf project deploy start --dry-run --test-level RunLocalTests --json",
    "deploy": "sf project deploy start --json"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.28.4",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@lwc/eslint-plugin-lwc": "^3.1.0",
    "@prettier/plugin-xml": "^3.4.1",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "prettier-plugin-apex": "^2.2.6"
  }
}
